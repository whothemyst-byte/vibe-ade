{
  "name": "vibe-ade",
  "version": "0.1.0",
  "private": true,
  "description": "Windows-exclusive Agent Development Environment",
  "main": "dist-electron/main.js",
  "scripts": {
    "build:electron": "tsc -p tsconfig.electron.json",
    "dev": "npm run build:electron && concurrently \"vite\" \"wait-on tcp:5173 && set VITE_DEV_SERVER_URL=http://localhost:5173&& electron .\"",
    "build": "vite build && npm run build:electron",
    "start": "electron .",
    "dist:win": "npm run build && electron-builder --win nsis --publish never"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "ansi_up": "^6.0.2",
    "dompurify": "^3.2.6",
    "electron-store": "^10.1.0",
    "marked": "^15.0.12",
    "node-pty": "^1.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.30",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "electron": "^35.2.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.8.3",
    "vite": "^6.2.6",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.vibe.ade",
    "productName": "Vibe-ADE",
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "win": {
      "signAndEditExecutable": false,
      "target": ["nsis"],
      "artifactName": "Vibe-ADE-${version}-setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
